<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gameplaybackground"
    tools:context=".puzzel_play_activity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:layout_weight="1">
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:backgroundTint="@null"
        android:background="@drawable/skip"
        android:id="@+id/Skip_Button"
        android:layout_weight="1.5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_weight=".7"
        android:text="Puzzel "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:id="@+id/level_show_text"
        android:textSize="@dimen/_40sdp"
        android:background="@drawable/level_board" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/hint"
        app:backgroundTint="@null"
        android:layout_weight="1.5"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_weight=".5">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_30sdp"
            android:textSize="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:id="@+id/answer_txt"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textColor="@color/black"
            android:background="@color/white"/>
        <Button
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"

            android:id="@+id/Delet_button"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_toRightOf="@id/answer_txt"
            android:background="@drawable/delete"
            android:layout_marginTop="@dimen/_5sdp"
            app:backgroundTint="@null"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            android:layout_toRightOf="@id/Delet_button"
            android:id="@+id/submit_button"
            android:text="Submit"
            android:layout_marginTop="@dimen/_5sdp"
            app:backgroundTint="@null"/>
        </RelativeLayout>
    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:layout_weight="1"

                >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_weight="1"
                android:backgroundTint="#817D7D"

                android:id="@+id/btn1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:backgroundTint="#817D7D"

                android:id="@+id/btn2"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="3"
                android:backgroundTint="#817D7D"
                android:id="@+id/btn3"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:backgroundTint="#817D7D"
                android:id="@+id/btn4"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"

                android:backgroundTint="#817D7D"
                android:id="@+id/btn5"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"
                android:backgroundTint="#817D7D"

                android:id="@+id/btn6"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7"

                android:backgroundTint="#817D7D"
                android:id="@+id/btn7"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="8"
                android:backgroundTint="#817D7D"
                android:id="@+id/btn8"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"

                android:backgroundTint="#817D7D"
                android:id="@+id/btn9"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"

                android:backgroundTint="#817D7D"
                android:id="@+id/btn0"/>


            </LinearLayout>


</LinearLayout>