<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="#9A9696"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"

        android:background="@color/white"
       android:layout_marginVertical="@dimen/_100sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="@dimen/_10sdp"
            android:text="Benefits of pro version"
            android:textColor="@color/purple_500"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:id="@+id/txt1"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="1. No Ads"
            android:layout_below="@id/txt1"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:id="@+id/txt2"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:text="2. No wait time for hint and skip"
            android:layout_below="@id/txt2"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:id="@+id/txt3"></TextView>

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt3"

            android:text="3. Hint for every level"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:text="4. Solution for every level"
            android:layout_below="@id/txt4"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:id="@+id/txt5"></TextView>

        <Button
            android:id="@+id/buy_button"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@id/txt5"
           android:textColor="@color/white"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/back_button"
            android:text="Buy"
            app:backgroundTint="@null"></Button>
        <Button
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@id/txt5"
            app:backgroundTint="@null"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_4sdp"
            android:background="@drawable/back_button"
            android:layout_toRightOf="@id/buy_button"
            android:id="@+id/nothanks_button"
            android:text="No,thanks"></Button>

    </RelativeLayout>

</LinearLayout>